.jumbotron
  .container
    h2 Welcome #{current_user.email}
    - if current_user.selected_hero
      | currently playing as #{current_user.selected_hero.name} #{link_to 'launch game', root_path}
    h3 Select your chamion or #{link_to 'create new', root_path}

    .heroes-list
      - @user_heroes.each do |hero|
        .hero
          p name: #{hero.name}
          p strength: #{hero.strength}
          p agility: #{hero.agility}
          p inteligence: #{hero.inteligence}
          .btn.btn-primary.select-champion*{'data-champion-id' => hero.id} Play now
